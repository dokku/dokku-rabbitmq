#!/usr/bin/env bash
_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
export RABBITMQ_IMAGE=${RABBITMQ_IMAGE:="$(awk -F '[ :]' '{print $2}' "${_DIR}/Dockerfile")"}
export RABBITMQ_IMAGE_VERSION=${RABBITMQ_IMAGE_VERSION:="$(awk -F '[ :]' '{print $3}' "${_DIR}/Dockerfile")"}
export RABBITMQ_ROOT=${RABBITMQ_ROOT:="$DOKKU_LIB_ROOT/services/rabbitmq"}
export DOKKU_LIB_HOST_ROOT=${DOKKU_LIB_HOST_ROOT:=$DOKKU_LIB_ROOT}
export RABBITMQ_HOST_ROOT=${RABBITMQ_HOST_ROOT:="$DOKKU_LIB_HOST_ROOT/services/rabbitmq"}

export PLUGIN_UNIMPLEMENTED_SUBCOMMANDS=("backup" "backup-auth" "backup-deauth" "backup-schedule" "backup-schedule-cat" "backup-set-encryption" "backup-unschedule" "backup-unset-encryption" "clone" "connect" "export" "import")
export PLUGIN_COMMAND_PREFIX="rabbitmq"
export PLUGIN_CONFIG_ROOT=${PLUGIN_CONFIG_ROOT:="$DOKKU_LIB_ROOT/config/$PLUGIN_COMMAND_PREFIX"}
export PLUGIN_DATA_ROOT=$RABBITMQ_ROOT
export PLUGIN_DATA_HOST_ROOT=$RABBITMQ_HOST_ROOT
export PLUGIN_DATASTORE_PORTS=(5672 4369 35197 15672)
export PLUGIN_DATASTORE_WAIT_PORT=5672
export PLUGIN_DEFAULT_ALIAS="RABBITMQ"
export PLUGIN_DISABLE_PULL=${RABBITMQ_DISABLE_PULL:=}
export PLUGIN_DISABLE_PULL_VARIABLE="RABBITMQ_DISABLE_PULL"
export PLUGIN_ALT_ALIAS="DOKKU_RABBITMQ"
export PLUGIN_IMAGE=$RABBITMQ_IMAGE
export PLUGIN_IMAGE_VERSION=$RABBITMQ_IMAGE_VERSION
export PLUGIN_SCHEME="amqp"
export PLUGIN_SERVICE="RabbitMQ"
export PLUGIN_VARIABLE="RABBITMQ"
export PLUGIN_BASE_PATH="$PLUGIN_PATH"
export PLUGIN_CONFIG_SUFFIX="config"
if [[ -n $DOKKU_API_VERSION ]]; then
  export PLUGIN_BASE_PATH="$PLUGIN_ENABLED_PATH"
fi

export PLUGIN_BUSYBOX_IMAGE="busybox:1.34.1-uclibc"
export PLUGIN_AMBASSADOR_IMAGE="dokku/ambassador:0.5.0"
export PLUGIN_S3BACKUP_IMAGE="dokku/s3backup:0.14.0"
export PLUGIN_WAIT_IMAGE="dokku/wait:0.6.0"

export RABBITMQ_CONFIG_OPTIONS=${RABBITMQ_CONFIG_OPTIONS:=""}
